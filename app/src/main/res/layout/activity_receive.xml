<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".receive"
    android:background="@drawable/recieve">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/cont"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/tf1"
            android:layout_alignEnd="@+id/tf1"
            android:layout_marginStart="63dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="63dp"
            android:src="@drawable/logo1removebg"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/tf1"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="85dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="218dp"
            android:layout_marginEnd="99dp"
            android:gravity="center"
            android:text="unknown"
            android:textColor="@color/white"
            android:textSize="30dp">

        </TextView>

        <TextView
            android:id="@+id/tf2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_marginStart="100dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="280dp"
            android:gravity="center"
            android:text="+91 9999999999"
            android:textColor="@color/white"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="145dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="05:34"
            android:textColor="@color/white"
            android:textSize="20sp">

        </TextView>

        <ImageView
            android:id="@+id/reject"
            android:layout_width="96dp"
            android:layout_height="92dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="155dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="565dp"
            android:layout_marginEnd="160dp"
            android:layout_marginBottom="73dp">
        </ImageView>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>